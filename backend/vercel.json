{
    "version": 2,
    "builds": [
      {
        "src": "server/**/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }
  